<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/control_brt"
    >

   <ImageButton
        android:id="@+id/bt_playorpause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:src="@drawable/buttonpause_in_playview"
        android:focusable="true" />
   <ImageButton
        android:id="@+id/bt_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="48dp"
        android:layout_marginTop="@dimen/playbt_top_marge"
        android:src="@drawable/buttonpre_in_playview"
        android:background="#000000"
        android:layout_toLeftOf="@id/bt_playorpause"
        
        android:focusable="true" />

    <ImageButton
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"      
        android:layout_marginTop="@dimen/playbt_top_marge"
        android:background="#000000"
        android:src="@drawable/buttonnext_in_playview"
        android:layout_toRightOf="@id/bt_playorpause"
        android:focusable="true" />
</RelativeLayout>